<div class="container">
        <div class="login-card">
        <%=image_tag('avatar_2x.png',:class => "profile-img-card")%>
        <p class="profile-name-card"></p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <span class="reauth-email"> </span>
              <div class="field">
                <%= f.email_field :email, autofocus: true,placeholder:'Email',class:'form-control'%>
              </div>
              <div class="field">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password,placeholder:'Password',autocomplete: "off",class:'form-control'%>
              </div>
              <div class="field">
                <%= f.password_field :password_confirmation,placeholder:'Password confirmation',class:'form-control', autocomplete: "off" %>
              </div>
              <div class="actions">
                  <%= f.submit "Sign up", class:'btn btn-primary btn-block' %>
              </div>
              <% end %>
              <div class="main-action">
                 <%= render "devise/shared/links" %>
              </div>
        </div>
    </div>
